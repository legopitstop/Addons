            "bright:lit_true": {
                "set_block_property": {
                    "bright:lit": "true"
                },
                "run_command": {
                    "command": "playsound random.click @p ~ ~ ~ 0.5"
                }
            },
            "bright:lit_false": {
                "set_block_property": {
                    "bright:lit": "false"
                },

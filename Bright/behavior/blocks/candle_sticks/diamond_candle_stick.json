{
    "format_version": "1.18",
    "minecraft:block": {
        "description": {
            "identifier": "bright:diamond_candle_stick",
            "properties": {
                "bright:facing": [
                    2,
                    3,
                    4,
                    5,
                    6
                ],
                "bright:lit": [
                    false,
                    true
                ]
            }
        },
        "components": {
            "minecraft:loot": "loot_tables/blocks/diamond_candle_stick.json",
            "minecraft:creative_category": {
                "category": "items",
                "group": "itemGroup.name.candles"
            },
            "tag:non_solid": {},
            "minecraft:destroy_time": 0.5,
            "minecraft:explosion_resistance": 0.5,
            "minecraft:block_light_filter": 0,
            "minecraft:geometry": "geometry.candle_stick",
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [
                            "up"
                        ],
                        "block_filter": [
                            {
                                "tags": "!q.any_tag('non_solid')"
                            }
                        ]
                    }
                ]
            },
            "minecraft:on_player_placing": {
                "event": "bright:facing"
            },
            "minecraft:block_collision": {
                "origin": [
                    -3,
                    0,
                    -3
                ],
                "size": [
                    6,
                    7,
                    6
                ]
            },
            "minecraft:aim_collision": {
                "origin": [
                    -3,
                    0,
                    -3
                ],
                "size": [
                    6,
                    7,
                    6
                ]
            }
        },
        "permutations": [
            {
                "condition": "q.block_property('bright:lit') == true",
                "components": {
                    "minecraft:block_light_emission": 0.5,
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "minecraft:candle_lit",
                            "render_method": "alpha_test"
                        },
                        "base": {
                            "texture": "bright:diamond_candle_stick",
                            "render_method": "alpha_test"
                        },
                        "candle": {
                            "texture": "minecraft:candle_lit",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:on_interact": {
                        "condition": "!q.is_item_equipped(0)",
                        "event": "bright:lit_false"
                    },
                    "minecraft:ticking": {
                        "looping": true,
                        "range": [
                            5,
                            5
                        ],
                        "on_tick": {
                            "event": "bright:flame"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('bright:lit') == false",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "minecraft:candle",
                            "render_method": "alpha_test"
                        },
                        "base": {
                            "texture": "bright:diamond_candle_stick",
                            "render_method": "alpha_test"
                        },
                        "candle": {
                            "texture": "minecraft:candle",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:on_interact": {
                        "condition": "q.is_item_name_any('slot.weapon.mainhand','minecraft:flint_and_steel', 'minecraft:fire_charge')",
                        "event": "bright:lit_true"
                    }
                }
            },
            {
                "condition": "q.block_property('bright:facing') == 2",
                "components": {
                    "minecraft:rotation": [
                        0,
                        90,
                        0
                    ]
                }
            },
            {
                "condition": "q.block_property('bright:facing') == 3",
                "components": {
                    "minecraft:rotation": [
                        0,
                        -90,
                        0
                    ]
                }
            },
            {
                "condition": "q.block_property('bright:facing') == 4",
                "components": {
                    "minecraft:rotation": [
                        0,
                        180,
                        0
                    ]
                }
            },
            {
                "condition": "q.block_property('bright:facing') == 5",
                "components": {
                    "minecraft:rotation": [
                        0,
                        0,
                        0
                    ]
                }
            }
        ],
        "events": {
            "bright:facing": {
                "set_block_property": {
                    "bright:facing": "q.cardinal_facing_2d"
                }
            },
            "bright:lit_true": {
                "sequence": [
                    {
                        "condition": "q.is_item_name_any('slot.weapon.mainhand','minecraft:flint_and_steel')",
                        "damage": {
                            "amount": 1,
                            "type": "none",
                            "target": "item"
                        }
                    },
                    {
                        "condition": "q.is_item_name_any('slot.weapon.mainhand','minecraft:fire_charge')",
                        "decrement_stack": {}
                    },
                    {
                        "set_block_property": {
                            "bright:lit": "true"
                        },
                        "run_command": {
                            "command": "playsound fire.ignite @p ~ ~ ~ 0.5"
                        },
                        "trigger": {
                            "event": "bright:flame"
                        }
                    }
                ]
            },
            "bright:lit_false": {
                "set_block_property": {
                    "bright:lit": "false"
                },
                "run_command": {
                    "command": "playsound random.fizz @p ~ ~ ~ 0.1"
                }
            },
            "bright:flame": {
                "run_command": {
                    "command": "particle minecraft:candle_flame_particle ~ ~0.05 ~"
                }
            }
        }
    }
}
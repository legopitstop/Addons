                            "target": "block",
                            "command": "structure load breaker:stone_block_breaker_5_false ~ ~ ~"
                        }
                    },
                    {
                        "condition": "q.block_property('breaker:direction') == 2 && q.block_property('breaker:powered') == true",
                        "run_command": {
                            "target": "block",
                            "command": "structure load breaker:stone_block_breaker_2_true ~ ~ ~"
                        }
                    },
                    {
                        "condition": "q.block_property('breaker:direction') == 3 && q.block_property('breaker:powered') == true",
                        "run_command": {
                            "target": "block",
                            "command": "structure load breaker:stone_block_breaker_3_true ~ ~ ~"
                        }
                    },
                    {
                        "condition": "q.block_property('breaker:direction') == 4 && q.block_property('breaker:powered') == true",
                        "run_command": {
                            "target": "block",
                            "command": "structure load breaker:stone_block_breaker_4_true ~ ~ ~"
                        }
                    },
                    {
                        "condition": "q.block_property('breaker:direction') == 5 && q.block_property('breaker:powered') == true",
                        "run_command": {
                            "target": "block",
                            "command": "structure load breaker:stone_block_breaker_5_true ~ ~ ~"
                        }
                    }
                ]
            },
            "breaker:place_direction": {
                "set_block_property": {
                    "breaker:direction": "(query.cardinal_facing_2d)"
                }
            },
            "breaker:break_block": {
                "sequence": [
                    {
                        "condition": "query.block_property('breaker:direction') == 2",
                        "run_command": {
                            "command": [
                                "function breaker/north"
                            ]
                        }
                    },
                    {
                        "condition": "query.block_property('breaker:direction') == 3",
                        "run_command": {
                            "command": [
                                "function breaker/south"
                            ]
                        }
                    },
                    {
                        "condition": "query.block_property('breaker:direction') == 4",
                        "run_command": {
                            "command": [
                                "function breaker/west"
                            ]
                        }
                    },
                    {
                        "condition": "query.block_property('breaker:direction') == 5",
                        "run_command": {
                            "command": [
                                "function breaker/east"
                            ]
                        }
                    }
                ]
            }

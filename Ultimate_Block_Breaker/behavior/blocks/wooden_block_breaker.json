            "minecraft:unit_cube": {},
            "minecraft:on_player_placing": {
                "event": "breaker:place_direction"
            },
            "minecraft:on_interact": {
                "event": "breaker:on_interact"
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('breaker:powered') == true",

        "events": {
            "breaker:on_interact": {
                "sequence": [
                    {
                        "condition": "query.get_equipped_item_name =='stone_breaker_upgrade'",
                        "trigger": {
                            "event": "breaker:upgrade"
                        }
                    },
                    {
                        "condition": "query.block_property('breaker:powered') == true",
                        "run_command": {
                            "target": "player",
                            "command": [
                                "titleraw @s actionbar {\"rawtext\":[{\"translate\":\"gui.false\"}]}",
                                "playsound random.click @p"
                            ]
                        },
                        "set_block_property": {
                            "breaker:powered": "false"
                        }
                    },
                    {
                        "condition": "query.block_property('breaker:powered') == false",
                        "run_command": {
                            "target": "player",
                            "command": [
                                "titleraw @s actionbar {\"rawtext\":[{\"translate\":\"gui.true\"}]}",
                                "playsound random.click @p"
                            ]
                        },
                        "set_block_property": {
                            "breaker:powered": "true"
                        }
                    }
                ]
            },
            "breaker:upgrade": {
                "sequence": [
                    {
                        "run_command": {
                            "target": "player",
                            "command": [
                                "playsound firework.blast @s",
                                "titleraw @s actionbar {\"rawtext\":[{\"translate\":\"gui.upgrade\",\"with\":{\"rawtext\":[{\"translate\":\"tile.breaker:stone_block_breaker.name\"}]}}]}"
                            ]
                        },
                        "decrement_stack": {}
                    },
                    {
                        "condition": "q.block_property('breaker:direction') == 2 && q.block_property('breaker:powered') == false",
                        "run_command": {
                            "target": "block",
                            "command": "structure load breaker:stone_block_breaker_2_false ~ ~ ~"
                        }
                    },
                    {
                        "condition": "q.block_property('breaker:direction') == 3 && q.block_property('breaker:powered') == false",
                        "run_command": {
                            "target": "block",
                            "command": "structure load breaker:stone_block_breaker_3_false ~ ~ ~"
                        }
                    },
                    {
                        "condition": "q.block_property('breaker:direction') == 4 && q.block_property('breaker:powered') == false",

                    "minecraft:material_instances": {
                        "up": {
                            "texture": "breaker:wooden_block_breaker_top_on"
                        },
                        "down": {
                            "texture": "breaker:block_breaker_bottom"
                        },
                        "north": {
                            "texture": "breaker:wooden_block_breaker_side"
                        },
                        "south": {
                            "texture": "breaker:wooden_block_breaker_side"
                        },
                        "east": {
                            "texture": "breaker:wooden_block_breaker_side"
                        },
                        "west": {
                            "texture": "breaker:wooden_block_breaker_side"
                        }
                    },
                    "minecraft:ticking": {
                        "looping": true,
                        "range": [
                            11,
                            11
                        ],
                        "on_tick": {
                            "event": "breaker:break_block"
                        }
                    }
                }
            },
            {
                "condition": "query.block_property('breaker:powered') == false",
                "components": {
                    "minecraft:material_instances": {
                        "up": {
                            "texture": "breaker:wooden_block_breaker_top"
                        },
                        "down": {
                            "texture": "breaker:block_breaker_bottom"
                        },
                        "north": {
                            "texture": "breaker:wooden_block_breaker_side"
                        },
                        "south": {
                            "texture": "breaker:wooden_block_breaker_side"

                "components": {
                    "minecraft:rotation": [
                        90,
                        0,
                        0
                    ]
                }
            },
            {
                "condition": "query.block_property('breaker:direction') == 3",
                "components": {
                    "minecraft:rotation": [
                        90,
                        180,
                        0
                    ]
                }
            },
            {
                "condition": "query.block_property('breaker:direction') == 4",
                "components": {
                    "minecraft:rotation": [
                        90,
                        90,
                        0
                    ]
                }
            },
            {
                "condition": "query.block_property('breaker:direction') == 5",
                "components": {
                    "minecraft:rotation": [
                        90,

{
    "$credit": "Thanks to Legopitstop for creating this useful asset",
    "format_version": "1.18",
    "minecraft:block": {
        "description": {
            "identifier": "basaltblocks:basalt_slab",
            "properties": {
                "basaltblocks:slab_block": [
                    "bottom",
                    "top",
                    "double"
                ]
            }
        },
        "components": {
            "tag:stone": {},
            "minecraft:block_light_filter": 0,
            "minecraft:destroy_time": 0.15,
            "minecraft:explosion_resistance": 4.2,
            "minecraft:map_color": "#191919",
            "minecraft:material_instances": {
                "up": {
                    "texture": "minecraft:basalt_top",
                    "render_method": "alpha_test"
                },
                "down": {
                    "texture": "minecraft:basalt_top",
                    "render_method": "alpha_test"
                },
                "*": {
                    "texture": "minecraft:basalt_side",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:creative_category": {
                "category": "construction",
                "group": "itemGroup.name.slab"
            },
            "minecraft:on_player_placing": {
                "condition": "q.target_x_rotation <= 0",
                "event": "top"
            }
        },
        "permutations": [
            {
                "condition": "q.block_property('basaltblocks:slab_block') == 'top'",
                "components": {
                    "minecraft:loot": "loot_tables/basaltblocks/blocks/basalt_slab.json",
                    "minecraft:geometry": "geometry.template_slab.top",
                    "minecraft:on_interact": {
                        "condition": "q.block_property('basaltblocks:slab_block') != 'double' && q.is_item_name_any('slot.weapon.mainhand','basaltblocks:basalt_slab')",
                        "event": "double"
                    },
                    "minecraft:block_collision": {
                        "origin": [
                            -8,
                            8,
                            -8
                        ],
                        "size": [
                            16,
                            8,
                            16
                        ]
                    },
                    "minecraft:aim_collision": {
                        "origin": [
                            -8,
                            8,
                            -8
                        ],
                        "size": [
                            16,
                            8,
                            16
                        ]
                    }
                }
            },
            {
                "condition": "q.block_property('basaltblocks:slab_block') == 'bottom'",
                "components": {
                    "minecraft:loot": "loot_tables/basaltblocks/blocks/basalt_slab.json",
                    "minecraft:geometry": "geometry.template_slab.bottom",
                    "minecraft:on_interact": {
                        "condition": "q.block_property('basaltblocks:slab_block') != 'double' && q.is_item_name_any('slot.weapon.mainhand','basaltblocks:basalt_slab')",
                        "event": "double"
                    },
                    "minecraft:block_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            8,
                            16
                        ]
                    },
                    "minecraft:aim_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            8,
                            16
                        ]
                    }
                }
            },
            {
                "condition": "q.block_property('basaltblocks:slab_block') == 'double'",
                "components": {
                    "minecraft:loot": "loot_tables/basaltblocks/blocks/basalt_double_slab.json",
                    "minecraft:block_light_filter": 1,
                    "minecraft:unit_cube": {},
                    "minecraft:block_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            16,
                            16
                        ]
                    },
                    "minecraft:aim_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            16,
                            16
                        ]
                    }
                }
            }
        ],
        "events": {
            "double": {
                "set_block_property": {
                    "basaltblocks:slab_block": "'double'"
                },
                "decrement_stack": {},
                "run_command": {
                    "target": "player",
                    "command": "playsound use.basalt @p"
                }
            },
            "bottom": {
                "set_block_property": {
                    "basaltblocks:slab_block": "'bottom'"
                }
            },
            "top": {
                "set_block_property": {
                    "basaltblocks:slab_block": "'top'"
                }
            }
        }
    }
}
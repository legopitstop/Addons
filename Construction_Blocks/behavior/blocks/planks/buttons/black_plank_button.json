{
    "format_version": "1.17.1",
    "minecraft:block": {
        "description": {
            "identifier": "const:black_plank_button",
            "properties": {
                "const:direction": [
                    0,
                    1,
                    2,
                    3,
                    4,
                    5
                ],
                "const:pressed": [
                    "false",
                    "true"
                ]
            }
        },
        "components": {
            "tag:wood": {},
            "minecraft:loot": "loot_tables/const/blocks/black_plank_button.json",
            "minecraft:block_light_absorption": 0,
            "minecraft:destroy_time": 0.2,
            "minecraft:explosion_resistance": 0,
            "minecraft:entity_collision": false,
            "minecraft:on_player_placing": {
                "event": "const:place_block"
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "const:black_planks",
                    "render_method": "opaque"
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [
                            "all"
                        ]
                    }
                ]
            }
        },
        "permutations": [
            {
                "name": "consts: direction=down",
                "condition": "q.block_property('const:direction') == 0",
                "components": {
                    "minecraft:rotation": [
                        180,
                        0,
                        0
                    ]
                }
            },
            {
                "name": "consts: direction=up",
                "condition": "q.block_property('const:direction') == 1",
                "components": {
                    "minecraft:rotation": [
                        0,
                        0,
                        0
                    ]
                }
            },
            {
                "name": "consts: direction=north",
                "condition": "q.block_property('const:direction') == 2",
                "components": {
                    "minecraft:rotation": [
                        90,
                        180,
                        0
                    ]
                }
            },
            {
                "name": "consts: direction=south",
                "condition": "q.block_property('const:direction') == 3",
                "components": {
                    "minecraft:rotation": [
                        90,
                        0,
                        0
                    ]
                }
            },
            {
                "name": "consts: direction=west",
                "condition": "q.block_property('const:direction') == 4",
                "components": {
                    "minecraft:rotation": [
                        90,
                        -90,
                        0
                    ]
                }
            },
            {
                "name": "consts: direction=east",
                "condition": "q.block_property('const:direction') == 5",
                "components": {
                    "minecraft:rotation": [
                        90,
                        90,
                        0
                    ]
                }
            },
            {
                "name": "consts: pressed=false",
                "condition": "q.block_property('const:pressed') == 'false'",
                "components": {
                    "minecraft:geometry": "geometry.block.button",
                    "minecraft:on_interact": {
                        "event": "const:pressed_true"
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -3,
                            0,
                            -2
                        ],
                        "size": [
                            6,
                            2,
                            4
                        ]
                    }
                }
            },
            {
                "name": "consts: pressed=true",
                "condition": "q.block_property('const:pressed') == 'true'",
                "components": {
                    "minecraft:geometry": "geometry.block.button_pressed",
                    "minecraft:ticking": {
                        "looping": true,
                        "range": [
                            1.5,
                            1.5
                        ],
                        "on_tick": {
                            "event": "const:pressed_false"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -3,
                            0,
                            -2
                        ],
                        "size": [
                            6,
                            1,
                            4
                        ]
                    }
                }
            }
        ],
        "events": {
            "const:place_block": {
                "set_block_property": {
                    "const:direction": "(q.cardinal_block_face_placed_on)"
                }
            },
            "const:pressed_true": {
                "run_command": {
                    "target": "player",
                    "command": "playsound random.click @p"
                },
                "set_block_property": {
                    "const:pressed": "'true'"
                }
            },
            "const:pressed_false": {
                "run_command": {
                    "target": "player",
                    "command": "playsound random.click @p"
                },
                "set_block_property": {
                    "const:pressed": "'false'"
                }
            }
        }
    }
}
{
    "format_version": "1.17.1",
    "minecraft:block": {
        "description": {
            "identifier": "const:yellow_plank_pressure_plate",
            "properties": {
                "const:pressed": [
                    "false",
                    "true"
                ]
            }
        },
        "components": {
            "tag:wood": {},
            "minecraft:loot": "loot_tables/const/blocks/yellow_plank_pressure_plate.json",
            "minecraft:destroy_time": 0.2,
            "minecraft:block_light_absorption": 0,
            "minecraft:explosion_resistance": 0,
            "minecraft:entity_collision": false,
            "minecraft:on_player_placing": {
                "event": "const:place_block"
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "const:yellow_planks",
                    "render_method": "opaque"
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [
                            "up"
                        ]
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "q.block_property('const:pressed') == 'false'",
                "components": {
                    "minecraft:geometry": "geometry.block.pressure_plate_up",
                    "minecraft:on_step_on": {
                        "event": "const:pressed_true"
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -7,
                            0,
                            -7
                        ],
                        "size": [
                            14,
                            1,
                            14
                        ]
                    }
                }
            },
            {
                "condition": "q.block_property('const:pressed') == 'true'",
                "components": {
                    "minecraft:geometry": "geometry.block.pressure_plate_down",
                    "minecraft:on_step_off": {
                        "event": "const:pressed_false"
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -7,
                            0,
                            -7
                        ],
                        "size": [
                            14,
                            0.5,
                            14
                        ]
                    }
                }
            }
        ],
        "events": {
            "const:place_block": {
                "set_block_property": {
                    "const:pressed": "'false'"
                }
            },
            "const:pressed_false": {
                "run_command": {
                    "target": "player",
                    "command": "playsound random.click @p"
                },
                "set_block_property": {
                    "const:pressed": "'false'"
                }
            },
            "const:pressed_true": {
                "run_command": {
                    "target": "player",
                    "command": "playsound random.click @p"
                },
                "set_block_property": {
                    "const:pressed": "'true'"
                }
            }
        }
    }
}
{
    "format_version": "1.17.1",
    "minecraft:block": {
        "description": {
            "identifier": "const:cyan_redstone_lamp",
            "properties": {
                "const:lit": [
                    "false",
                    "true"
                ]
            }
        },
        "components": {
            "tag:stone": {},
            "minecraft:loot": "loot_tables/const/blocks/cyan_redstone_lamp.json",
            "minecraft:destroy_time": 0.2,
            "minecraft:explosion_resistance": 1,
            "minecraft:map_color": "#ffffff",
            "minecraft:unit_cube": {},
            "minecraft:on_player_placing": {
                "event": "false"
            }
        },
        "permutations": [
            {
                "condition": "q.block_property('const:lit') == 'false'",
                "components": {
                    "minecraft:on_interact": {
                        "event": "true"
                    },
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "const:cyan_redstone_lamp",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('const:lit') == 'true'",
                "components": {
                    "minecraft:on_interact": {
                        "event": "false"
                    },
                    "minecraft:block_light_emission": 1.0,
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "const:cyan_redstone_lamp_lit",
                            "render_method": "alpha_test"
                        }
                    }
                }
            }
        ],
        "events": {
            "false": {
                "play_sound": {
                    "sound": "block.stonecutter.use",
                    "target": "self"
                },
                "set_block_property": {
                    "const:lit": "'false'"
                }
            },
            "true": {
                "play_sound": {
                    "sound": "block.stonecutter.use",
                    "target": "self"
                },
                "set_block_property": {
                    "const:lit": "'true'"
                }
            }
        }
    }
}